{
  "name": "vue-lazily",
  "description": "The easiest way to lazy load your content",
  "version": "2.0.0",
  "keywords": [
    "vue",
    "lazy",
    "observer",
    "visible",
    "async",
    "api"
  ],
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && microbundle --format esm,cjs",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build",
    "watch": "microbundle watch --format esm,cjs"
  },
  "author": "Enkot",
  "license": "MIT",
  "devDependencies": {
    "vue": "^2.7.0",
    "microbundle": "^0.15.0"
  },
  "peerDependencies": {
    "vue": "^2.7.0"
  }
}
